<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>drv</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/stds</param-value>
    </context-param>
    <context-param>
        <param-name>dbid</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbpass</param-name>
        <param-value>root</param-value>
    </context-param>
    <servlet>
        <servlet-name>ShowResult</servlet-name>
        <servlet-class>result.ShowResult</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Demo</servlet-name>
        <servlet-class>result.Demo</servlet-class>
        <load_on_startup>0</load_on_startup>
    </servlet>
    <servlet>
        <servlet-name>ExamForm</servlet-name>
        <servlet-class>result.ExamForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeTable</servlet-name>
        <servlet-class>result.TimeTable</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Book</servlet-name>
        <servlet-class>result.Book</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllDocs</servlet-name>
        <servlet-class>result.AllDocs</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckUser</servlet-name>
        <servlet-class>result.CheckUser</servlet-class>
        <init-param>
            <description>its userid of Admin</description>
            <param-name>adminid</param-name>
            <param-value>ssi</param-value>
        </init-param>
        <init-param>
            <param-name>adminpass</param-name>
            <param-value>ssi@123</param-value>
        </init-param>
    </servlet>
    <servlet>
        <description>Its a Test Servlet</description>
        <servlet-name>Test</servlet-name>
        <servlet-class>result.Test</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>result.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Recheck</servlet-name>
        <servlet-class>result.Recheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowSubjects</servlet-name>
        <servlet-class>result.ShowSubjects</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowStudents</servlet-name>
        <servlet-class>ShowStudents</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowResult</servlet-name>
        <url-pattern>/ShowResult</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExamForm</servlet-name>
        <url-pattern>/ExamForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeTable</servlet-name>
        <url-pattern>/TimeTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Book</servlet-name>
        <url-pattern>/Book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllDocs</servlet-name>
        <url-pattern>/AllDocs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Demo</servlet-name>
        <url-pattern>/Demo</url-pattern>
        <url-pattern>/demo</url-pattern>
        <url-pattern>/dm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckUser</servlet-name>
        <url-pattern>/CheckUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Test</servlet-name>
        <url-pattern>/Test</url-pattern>
        <url-pattern>/tt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Recheck</servlet-name>
        <url-pattern>/Recheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowSubjects</servlet-name>
        <url-pattern>/ShowSubjects</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowStudents</servlet-name>
        <url-pattern>/ShowStudents</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
